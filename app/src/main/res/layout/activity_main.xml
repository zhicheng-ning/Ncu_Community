<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:background="#ffa8e0de"
android:orientation="vertical">

<FrameLayout
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="?attr/android:windowBackground"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_gravity="bottom"
    android:background="?attr/android:windowBackground">

    <RelativeLayout
        android:id="@+id/rlayout_community"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_community"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:tint="#ff2196f3"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/fx1"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_study"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_study"
                android:layout_width="35dp"
                android:layout_height="32dp"

                android:layout_gravity="center_horizontal"
                android:src="@drawable/tv"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_myInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_myInfo"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:tint="#D689A1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wd1"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

</LinearLayout>
