<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/quanziSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#FFFFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivReturn"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/fh"
                            android:tint="#000000" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:lines="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="14dp"
                        android:onClick="fenxiangbutton"
                        android:src="@drawable/fenxiang"
                        android:tint="#000000" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/listview_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/listview_layout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/layoutfabuCircleImageView1"
                                android:layout_width="35.0dip"
                                android:layout_height="35.0dip"
                                android:layout_below="@+id/guanliyuanImageView"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                app:civ_border_color="#ff4a9bec"
                                app:civ_border_width="0.5dip" />

                            <LinearLayout
                                android:id="@+id/listview_layout3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="bottom"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/listview_layout6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_topicAuthorName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="加载中…"
                                        android:textColor="#FF80AC67"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/listview_layout4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/layoutfabuTextView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginBottom="0dp"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:text="加载中…"
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/layoutfabuTextView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="left|center"
                            android:maxLines="2"
                            android:singleLine="true"
                            android:text="加载中…"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/layoutfabuTextView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="8dp"
                            android:autoLink="all"
                            android:gravity="top"
                            android:text="\t\t加载中"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/layoutfabu1image"
                                android:layout_width="match_parent"
                                android:layout_height="175dp"
                                android:scaleType="fitCenter" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="—————我是有底线的—————"
                                android:textColor="#FFE3E3E3" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="10.6dp"
                                android:layout_marginTop="8dp"
                                android:background="#f4f7f7"
                                android:text="" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:gravity="left|center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center"
                                    android:text="评论"
                                    android:textColor="#FFADBC78"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="10.6dp"
                                android:layout_marginTop="8dp"
                                android:background="#f4f7f7"
                                android:text="" />

                            <!--    评论列表,自定义的ListView，实现在ScrollView中嵌套ListView -->
                            <com.example.learncommunity.myview.MyListView
                                android:id="@+id/comment_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#f4f7f7"
                                android:dividerHeight="1dp"
                                android:scrollbars="none">

                            </com.example.learncommunity.myview.MyListView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.0"
                                android:gravity="top"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/layoutfabuImageView1"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:src="@drawable/c2l"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/layoutfabuImageView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/bdl"
                                    android:visibility="visible" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <!--    评论-->

    <LinearLayout
        android:id="@+id/cur_music"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/comment"
            android:tint="#686868" />

        <TextView
            android:id="@+id/layoutfabuTextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:text="0" />

        <EditText
            android:id="@+id/layoutfabuEditText1"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:background="@drawable/edit_choosecity_normal"
            android:gravity="left|center"
            android:hint="发表评论"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_main_small_logo"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:src="@drawable/edit" />

    </LinearLayout>

</RelativeLayout>